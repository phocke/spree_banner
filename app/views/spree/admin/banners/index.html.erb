<div class='toolbar'>
  <ul class='actions'>
    <li id="new_banner_link">
      <%= button_link_to "new banner", new_admin_banner_url, {:icon => 'add'} %>
    </li>
  </ul>
  <br class='clear' />
</div>

<% content_for :page_title do %>
   <%= "Banners" %>
<% end %>

<table class="index">
  <colgroup>
    <col style="width: 40%" />
    <col style="width: 40%" />
    <col style="width: 10%" />
    <col style="width: 10%" />
  </colgroup>
  <thead>
    <tr>
      <th><%= "name" %></th>
      <th><%= "links to" %></th>
      <th><%= "visible" %></th>
      <th class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id banner %>">
        <td>
          <%= banner.name %>
        </td>
        <td>
          <%= banner.link %>
        </td>
        <td class="align-center">
          <%= content_tag(:i, '', :class => 'icon-ok green') if banner.visible %>
        </td>
        <td  class="actions">
          <%= link_to_edit banner, :no_text => true %>
          <%= link_to_delete banner, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
